<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TretmentuserConfirm">



        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/purtoolbar"
                layout="@layout/toolbar" />

            <TextView
                android:id="@+id/tooltitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:fontFamily="HelveticaNeue"
                android:textAlignment="center"
                android:singleLine="true"
                android:text="Tretment Confirm"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view11"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/title_50dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="@dimen/dp10"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--ImageView
                android:id="@+id/imageView"
                android:tag="image_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
               /-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="10sp"
                android:layout_weight="2"
                android:orientation="vertical">


                    <TextView
                        android:id="@+id/tretconfirname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MR siddharth"
                        android:layout_gravity="center_horizontal"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtretmyself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/taketretmentself"
                        android:textSize="20sp" />


                <Button
                    android:id="@+id/btnmyself"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="40dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="#f8a519"
                    android:fontFamily="HelveticaNeue"
                    android:text="@string/myself"
                    android:textColor="@color/black" />

                <!--TextView
                    android:id="@+id/textViewVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:fontFamily="Georgia"
                    android:text="@string/desc"
                    android:gravity="center_horizontal"/-->

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <!-- Second cardView starts-->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:padding="@dimen/title_50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--ImageView
                android:id="@+id/imageView"
                android:tag="image_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
               /-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="10sp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtretother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/taketretmentself"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btnother"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="50dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="#f8a519"
                    android:fontFamily="HelveticaNeue"
                    android:textColor="@color/black"
                    android:text="@string/other" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>