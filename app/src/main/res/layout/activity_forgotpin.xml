<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.ForgotPin">
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llforgotpin"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="WOULD YOU LIKE US TO SEND NEW PIN ON YOUR REGISTERED MOBILE NUMBER AND EMAIL ID"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="wrap_content">

               <android.support.v7.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   cardCornerRadius="@dimen/dp10"
                   android:elevation="2dp">

                   <LinearLayout

                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/title_50dp"
                       android:layout_marginLeft="@dimen/title_50dp"
                       android:gravity="center_vertical"
                       android:orientation="horizontal"
                       android:padding="@dimen/margin_8dp">

                       <Button
                           android:id="@+id/btnforget"
                           android:layout_width="wrap_content"
                           android:layout_height="40dp"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/margin_48dp"
                           android:backgroundTint="#f8a519"
                           android:background="@android:drawable/dialog_holo_light_frame"
                           android:fontFamily="HelveticaNeue"
                           android:textColor="@color/black"
                           android:text="YES"
                           android:textStyle="bold" />


                   </LinearLayout>

               </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    cardCornerRadius="@dimen/dp10"
                    android:elevation="2dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_48dp"
                android:padding="@dimen/margin_8dp">

                <Button
                    android:id="@+id/btngoback"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="70dp"
                    android:backgroundTint="#f8a519"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:fontFamily="HelveticaNeue"
                    android:text="NO"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>