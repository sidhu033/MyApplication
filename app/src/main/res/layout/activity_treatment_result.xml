<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TreatmentResult"
    android:background="@color/black">

    <android.support.v7.widget.CardView
        android:id="@+id/cardlogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap = "false"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/lldate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8a519">

            <TextView
                android:id="@+id/txtloghdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <!--Textview Date End-->


        <LinearLayout
            android:layout_marginTop="@dimen/title_50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Initial Reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <!--Initial Reading-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_margin="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView1"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView1"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/textView3"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="SYS(mmhg): 100" />

                        <TextView
                            android:id="@+id/textView4"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView5"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/textView6"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView4"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
            <!--Final Reading-->
            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Final Reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_margin="8dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:text="SYS(mmhg): 100" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:layout_marginTop="10dp"
                            android:text="SYS(mmhg): 100" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text2"
                            android:layout_marginTop="10dp"
                            android:text="SYS(mmhg): 100" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text5"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/text4"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text5"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/text6"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text4"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
         <!--Textview for treatment-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/redoxerttext1"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    style="@style/Base.ThemeOverlay.AppCompat.Light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/redoxerttext2"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    style="@style/Base.ThemeOverlay.AppCompat.Light"/>
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_marginTop="440dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layoutMode="clipBounds"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-20dp">

            <ImageButton
                android:id="@+id/imgbtnplus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/circularstyle"
                app:srcCompat="@android:drawable/ic_input_add" />
        </FrameLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/cardlogs"
        android:orientation="horizontal"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/home_blue_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Home"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="6dp"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/ic_arrow_forward_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtlogs"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:text="Logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>