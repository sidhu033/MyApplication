<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.HealthMone">

    <LinearLayout
        android:id="@+id/crel"
        android:layout_below="@+id/purtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            cardCornerRadius="4dp"
            contentPadding="10dp">

            <RelativeLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/Quetions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/title_50dp"
                    android:textSize="22dp"
                    android:fontFamily="HelveticaNeue"
                    android:text="Family History"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subquetions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/Quetions"
                    android:text="KNOW YOUR HEALTH"
                    android:textSize="17dp"
                    android:fontFamily="HelveticaNeue"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subquetions">
                    <CheckBox
                        android:id="@+id/qcheck1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/subquetions"
                        android:filterTouchesWhenObscured="true"
                        android:layout_marginLeft="@dimen/margin_80dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="17dp"
                        android:text="Yes"/>

                    <CheckBox
                        android:id="@+id/qcheck2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/subquetions"
                        android:filterTouchesWhenObscured="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/title_50dp"
                        android:textSize="17dp"
                        android:text="No"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>